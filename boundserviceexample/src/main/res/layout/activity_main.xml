<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_IntentData"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Intent data"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_StartBoundService"
        android:layout_below="@id/et_IntentData"
        android:layout_margin="10dp"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Start bound service"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_StopBoundService"
        android:layout_below="@id/btn_StartBoundService"
        android:layout_margin="10dp"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Stop bound service"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>